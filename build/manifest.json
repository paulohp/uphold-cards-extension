{
  "manifest_version": 2,
  "name": "Uphold Cards",
  "description": "Your Uphold Cards one click far from you.",
  "version": "0.0.0.1",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Uphold Cards",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "webRequest",
    "*://*.uphold.com/"
  ]
}
